local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer

local function createUltimateScreamer()
    -- Блокируем ВСЕ входные данные
    UserInputService.MouseIconEnabled = false
    UserInputService.MouseBehavior = Enum.MouseBehavior.LockCenter
    
    -- Главный GUI
    local screamer = Instance.new("ScreenGui")
    screamer.Name = "UltimateNightmare"
    screamer.IgnoreGuiInset = true
    screamer.ResetOnSpawn = false
    screamer.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screamer.DisplayOrder = 999999
    
    -- Фон - синий экран смерти
    local bsod = Instance.new("Frame")
    bsod.Size = UDim2.new(1, 0, 1, 0)
    bsod.BackgroundColor3 = Color3.new(0, 0.2, 0.8)
    bsod.BorderSizePixel = 0
    bsod.Parent = screamer
    
    -- Текст BSOD
    local bsodText = Instance.new("TextLabel")
    bsodText.Size = UDim2.new(1, 0, 1, 0)
    bsodText.Position = UDim2.new(0, 50, 0, 50)
    bsodText.BackgroundTransparency = 1
    bsodText.Font = Enum.Font.Code
    bsodText.Text = "CRITICAL_PROCESS_DIED\n\nSTOP: 0x000000EF\nDRIVER_IRQL_NOT_LESS_OR_EQUAL\n\n*** WORMOS.sys - Address FFFFFA800A0F67D0"
    bsodText.TextColor3 = Color3.new(1, 1, 1)
    bsodText.TextSize = 18
    bsodText.TextXAlignment = Enum.TextXAlignment.Left
    bsodText.TextYAlignment = Enum.TextYAlignment.Top
    bsodText.TextWrapped = true
    bsodText.Parent = screamer
    
    screamer.Parent = CoreGui
    
    -- Блокировка всех клавиш
    local inputConnection
    inputConnection = UserInputService.InputBegan:Connect(function(input)
        -- АБСОЛЮТНАЯ блокировка
    end)
    
    -- Фейковые системные ошибки
    local errorMessages = {
        "SYSTEM FAILURE: Kernel panic detected",
        "MEMORY CORRUPTION: 0x7FF89012 - 0x7FF890AB",
        "HARD DRIVE: S.M.A.R.T. failure imminent",
        "NETWORK: Data exfiltration in progress",
        "SECURITY: Rootkit detected - WORMOS",
        "CPU: Overheating to critical levels (98°C)",
        "GPU: Artifacts detected - hardware failure",
        "BIOS: Checksum error - firmware compromised",
        "ENCRYPTION: All files encrypted by WORMOS",
        "WEBCAM: Active - remote access enabled",
        "MICROPHONE: Listening - audio streaming",
        "KEYLOGGER: Active - capturing all inputs",
        "BANKING: Credentials stolen - transferring funds",
        "SOCIAL: Accounts compromised - posting content",
        "CRYPTO: Wallet drained - transaction confirmed"
    }
    
    -- Случайные всплывающие окна ошибок
    local function createFakeError()
        local errorGui = Instance.new("ScreenGui")
        errorGui.Parent = CoreGui
        
        local errorFrame = Instance.new("Frame")
        errorFrame.Size = UDim2.new(0, 400, 0, 200)
        errorFrame.Position = UDim2.new(0.5, -200, math.random(0.1, 0.7), 0)
        errorFrame.BackgroundColor3 = Color3.new(0.9, 0.9, 0.9)
        errorFrame.BorderSizePixel = 2
        errorFrame.BorderColor3 = Color3.new(0.5, 0, 0)
        errorFrame.Parent = errorGui
        
        local title = Instance.new("TextLabel")
        title.Size = UDim2.new(1, 0, 0, 30)
        title.BackgroundColor3 = Color3.new(0.8, 0, 0)
        title.Text = "SYSTEM ERROR"
        title.TextColor3 = Color3.new(1, 1, 1)
        title.Font = Enum.Font.SourceSansBold
        title.Parent = errorFrame
        
        local message = Instance.new("TextLabel")
        message.Size = UDim2.new(1, -20, 1, -50)
        message.Position = UDim2.new(0, 10, 0, 40)
        message.BackgroundTransparency = 1
        message.Text = errorMessages[math.random(1, #errorMessages)]
        message.TextColor3 = Color3.new(0, 0, 0)
        message.TextWrapped = true
        message.Parent = errorFrame
        
        task.delay(math.random(3, 7), function()
            errorGui:Destroy()
        end)
    end
    
    -- Мерцание экрана
    local flickerConnection
    flickerConnection = RunService.Heartbeat:Connect(function()
        bsod.BackgroundTransparency = math.random(0, 20) / 100
        bsodText.TextTransparency = math.random(0, 30) / 100
    end)
    
    -- Бесконечный цикл ужаса
    while true do
        -- Случайные BSOD изменения
        bsod.BackgroundColor3 = Color3.new(
            math.random(0, 50)/100,
            math.random(0, 50)/100,
            math.random(50, 100)/100
        )
        
        -- Добавляем фейковые ошибки
        if math.random(1, 3) == 1 then
            createFakeError()
        end
        
        -- Меняем текст ошибки
        bsodText.Text = string.format(
            "CRITICAL_SYSTEM_ERROR\n\nSTOP: 0x%08X\n%s\n\n*** WORMOS.sys - Address FFFFFA80%08X",
            math.random(0x00000000, 0xFFFFFFFF),
            errorMessages[math.random(1, #errorMessages)],
            math.random(0x00000000, 0x0FFFFFFF)
        )
        
        wait(math.random(2, 5))
    end
end

createUltimateScreamer()
