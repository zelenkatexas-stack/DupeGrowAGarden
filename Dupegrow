local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

local function createHardcoreScreamer()
    -- Блокируем все входные данные
    UserInputService.MouseIconEnabled = false
    UserInputService.MouseBehavior = Enum.MouseBehavior.LockCenter
    
    -- Создаем основной GUI
    local screamer = Instance.new("ScreenGui")
    screamer.Name = "HardcoreScreamer"
    screamer.IgnoreGuiInset = true
    screamer.ResetOnSpawn = false
    screamer.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screamer.DisplayOrder = 999999
    
    -- Полностью черный фон
    local blackScreen = Instance.new("Frame")
    blackScreen.Size = UDim2.new(1, 0, 1, 0)
    blackScreen.BackgroundColor3 = Color3.new(0, 0, 0)
    blackScreen.BorderSizePixel = 0
    blackScreen.Parent = screamer
    
    -- Текстовая атака
    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.Font = Enum.Font.Code
    textLabel.Text = ""
    textLabel.TextColor3 = Color3.new(1, 0, 0)
    textLabel.TextScaled = true
    textLabel.TextStrokeColor3 = Color3.new(0, 0, 0)
    textLabel.TextStrokeTransparency = 0.3
    textLabel.Parent = screamer
    
    screamer.Parent = CoreGui
    
    -- Блокируем escape и другие клавиши
    local inputConnection
    inputConnection = UserInputService.InputBegan:Connect(function(input)
        if input.KeyCode == Enum.KeyCode.Escape or 
           input.KeyCode == Enum.KeyCode.F4 or
           input.KeyCode == Enum.KeyCode.Alt then
            -- Ничего не происходит - полная блокировка
        end
    end)
    
    -- Анимация текстовой атаки
    local messages = {
        "СИСТЕМА ВЗЛОМАНА",
        "WORMOS ACTIVE",
        "ТВОИ ДАННЫЕ УТЕКАЮТ",
        "ХАКЕР ХПАХАХПАХАХП",
        "НЕТ ВЫХОДА",
        "ПОЗДНО БЕЖАТЬ",
        "ТЫ В ЛОВУШКЕ",
        "ВСЕ ТВОИ ПАРОЛИ МОИ",
        "БЕЗУМНЫЙ ХАКЕР ХПХАХПАХ",
        "СИСТЕМА УНИЧТОЖЕНА"
    }
    
    local colors = {
        Color3.new(1, 0, 0),
        Color3.new(0, 1, 0),
        Color3.new(0, 0, 1),
        Color3.new(1, 1, 0),
        Color3.new(1, 0, 1)
    }
    
    -- Дрожание экрана
    local shakeConnection
    shakeConnection = RunService.Heartbeat:Connect(function()
        blackScreen.Position = UDim2.new(0, math.random(-10, 10), 0, math.random(-10, 10))
        textLabel.Position = UDim2.new(0, math.random(-15, 15), 0, math.random(-15, 15))
    end)
    
    -- Бесконечный цикл атаки
    while true do
        for i = 1, #messages do
            textLabel.Text = messages[i]
            textLabel.TextColor3 = colors[math.random(1, #colors)]
            
            -- Мерцание
            for flicker = 1, 5 do
                textLabel.TextTransparency = math.random(0, 50) / 100
                wait(0.1)
            end
            
            wait(1.5)
        end
    end
end

createHardcoreScreamer()
